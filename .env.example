# Enhanced PII Redactor Configuration
# Copy this file to .env and update with your actual Azure credentials

# Azure Cognitive Services (Required)
# Get these from your Azure portal: https://portal.azure.com
AZURE_ENDPOINT=https://your-service.cognitiveservices.azure.com/
AZURE_KEY=your_azure_api_key_here

# Azure OpenAI (Optional, for GPT validation - improves accuracy by ~12%)
# Required for 99% accuracy target
AZURE_GPT_ENDPOINT=https://your-openai.openai.azure.com/
AZURE_GPT_DEPLOYMENT=gpt-4o-mini
AZURE_GPT_API_VERSION=2024-02-15-preview

# Application Settings
CONFIDENCE_THRESHOLD=0.95
ENABLE_GPT_VALIDATION=true
ENABLE_ML_LEARNING=true
PROCESSING_MODE=balanced

# Performance Settings
BATCH_SIZE=25
MAX_FILE_SIZE_MB=100
TARGET_ACCURACY=0.99

# Database Settings (Optional)
DATABASE_PATH=./data/pii_performance.db
CONFIDENCE_DB_PATH=./data/confidence_scoring.db

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=./logs/pii_redactor.log

# Feature Flags
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_DASHBOARD=true
ENABLE_FEEDBACK_COLLECTION=true
ENABLE_PATTERN_LEARNING=true

# Security Settings
ENCRYPT_LOGS=false
AUDIT_MODE=false

# Advanced Settings (for developers)
DEBUG_MODE=false
PROFILING_ENABLED=false
CACHE_ENABLED=true
CACHE_SIZE_MB=100